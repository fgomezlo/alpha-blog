<% if obj.errors.any? %>
  <div class="card text-white bg-danger">
    <div class="card-header">
      <%= pluralize(obj.errors.count, "error") %>
      prohibited this article from being saved:
    </div>
    <div class="card-body">
      <ul>
        <% obj.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <br/>
<% end %>