<h1 align="center">Listing All Categories</h1>

<div align="center">
<%= will_paginate %>
  <% @categories.each do |category| %>

  <div class="row">
    <div class="col-md-4 offset-md-4">
      <div class="card card-block bg-light">
        <div class="article-title">
          <%= link_to "#{category.name}", category_path(category) %>
          <p><small><%= pluralize(category.articles.count, "article") %></small></small></p>
        </div>
      </div>
      <br>
    </div>
  </div>

  <% end %>
<%= will_paginate %>
</div>
