<%= render 'shared/error' , obj: @article %>

<div class="row">
  <div class="col-md-12">
    <%= form_for @article do |f| %>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label"><%= f.label :title %></label>
      <div class="col-sm-10">
        <%= f.text_field :title, class: "form-control", placeholder: "title of article", autofocus: true %>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label"><%= f.label :description %></label>
      <div class="col-sm-10">
        <%= f.text_area :description, class: "form-control", placeholder: "Description of article", rows: 10 %>
      </div>
    </div>
    <div class="form-group row">

      <div class="sm-offset-2 col-sm-10">
        <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |b| %>
          <% content_tag(:div, b.label(class: "form-check-label") { b.check_box(class: "form-check-input") + b.text }, class: "form-check form-check-inline") %>
        <% end %>
      </div>

    </div>
    <div class="form-group row">
      <div class="col-sm-12 center">
        <%= f.submit class: "btn btn-primary btn-large" %>
      </div>
    </div>
  <% end %>
</div>
</div>
<div class="row">
<div class="col-md-4 offset-md-4">
  [<%= link_to "Cancel request and return to articles listing", articles_path %>]
</div>
</div>
