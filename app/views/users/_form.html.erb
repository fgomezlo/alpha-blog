<div class="row">
  <div class="col-md-12">
    <%= form_for @user do |f| %>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label"><%= f.label :username %></label>
      <div class="col-sm-10">
        <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label"><%= f.label :email %></label>
      <div class="col-sm-10">
        <%= f.email_field :email, class: "form-control", placeholder: "Enter email", rows: 10 %>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label"><%= f.label :password %></label>
      <div class="col-sm-10">
        <%= f.password_field :password, class: "form-control", placeholder: "Enter password", rows: 10 %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-12 center">
        <%= f.submit( @user.new_record? ? "Sign Up" : "Update account", class: "btn btn-primary btn-large") %>
      </div>
    </div>
  <% end %>
</div>
</div>
<div class="row">
<div class="col-md-4 offset-md-4">
  [<%= link_to "Cancel request and return to articles listing", articles_path %>]
</div>
</div>
