<h1>All Alpha Bloggers</h1>
<div align="center">
  <%= will_paginate %>
</div>
<% @users.each do |user| %>
  <div class="row center" style="margin-bottom: 15px">
    <div class="col-md-4 offset-md-4">
      <div class="card" style="width: 18rem;">
        <div class="card-img-top" >
          <%= link_to gravatar_for(user), user_path(user) %>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= user.username %></h5>
          <p class="card-text"><small><%= pluralize(user.articles.count, "article") if user.articles %></small></p>
          <% if logged_in? and current_user.admin? %>
            <small><%= link_to "Delete this user", user_path(user), method: :delete,
            data: { confirm: "Are you sure you want to delete the user and all their articles?" } %></small>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<div align="center">
  <%= will_paginate %>
</div>
